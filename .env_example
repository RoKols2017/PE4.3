# Ключ API ElevenLabs (получить в кабинете ElevenLabs)
ELEVENLABS_API_KEY=your_elevenlabs_api_key

# Токен Telegram-бота (получить у BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Голос по умолчанию (если пользователь не выбрал). Возьми из /v1/voices -> voice_id
DEFAULT_VOICE_ID=EXAVITQu4vr4xnSDxMaL

# Формат аудио (поддерживается mp3 для REST ElevenLabs)
AUDIO_FORMAT=mp3

# Временная директория (можно указать абсолютный путь, напр. C:\py_project\PE4.3\tmp)
TMP_DIR=./tmp

# Режим отправки: voice|audio. voice пытается send_voice (OGG/Opus ожидается), есть fallback на audio
SEND_AS=voice

# Уровень логирования: DEBUG|INFO|WARNING|ERROR|CRITICAL
LOG_LEVEL=INFO
